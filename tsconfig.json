{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "configs",
    "public"
  ],
  "include": [
    "./src"
  ]
}
